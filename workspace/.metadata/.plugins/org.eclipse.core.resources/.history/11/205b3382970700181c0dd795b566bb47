#include <iostream>
#include <fstream>
using namespace std;

int main(){

	ofstream theFile("myFile.txt");

	if(theFile.is_open())
		cout<<"File is open"<<endl;
	else
		cout<<"File not opened"<<endl;



	theFile.close();

	return 0;
}
