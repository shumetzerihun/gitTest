#ifndef SHAPE_H_
#define SHAPE_H_

class Rectangle {
private:
	int length;
	int width;
public:
	void setLength(int);
	void setWidth(int);
	int getLength(void);
	int getwidth(void);
	int getArea(void);
	Rectangle(int, int);
	~Rectangle();
};

class Box {
private:
	double length;         // Length of a box
	double bredth;        // Breadth of a box
	double height;         // Height of a box
public:
	double getVolume(void);
	void setLength(double);
	void setBredth(double);
	void setHeight(double);
	Box(double, double, double);        //Constructor
	~Box();
};

class Cylinder {
private:
	double radius;
	double height;
public:
	double getVolume(void);
	void setHeight(double);
	void setRadius(double);
	Cylinder(double, double);        //Constructor
	~Cylinder();
};

class Pyramid {
private:
	double baseWidth;
	double baseLength;
	double height;
public:
	double getVolume(void);
	void setBaseWidth(double bWid);
	void setBaseLength(double bLen);
	void setHeight(double heig);
	Pyramid(double, double, double);
	~Pyramid();
};


#endif /* SHAPE_H_ */
