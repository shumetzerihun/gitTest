#include <iostream>
#include <string>

using namespace std;


class FriendClass{
	int age;
	friend void printAge(FriendClass a);
public:
	void setAge(int a){
		age = a;
	}
};


void printAge(FriendClass x){

	x.age = 38;
	cout<<x.age;
}

int main(){

	FriendClass bb;
	bb.setAge(28);
	bb.printAge(bb);


	return 0;
}


