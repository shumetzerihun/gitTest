#include<iostream>
#include<iomanip>
#include<vector>
using namespace std;

class Class1{
public:
	int staticVar;
	Class1(){
		++staticVar;
	}
	~Class1(){
		--staticVar;
	}

	void howMany(){
		cout<<staticVar<<" objects created so far."<<endl;
	}
};

Class1::staticVar = 0;

int main(void) {

	Class1 obj1;
	Class1 obj2;

	obj1.howMany();

	return 0;
}
