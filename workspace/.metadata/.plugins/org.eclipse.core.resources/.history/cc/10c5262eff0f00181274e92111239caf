#include <string>
#include <iostream>
using namespace std;

class Stack{
private:
	int sp;
	int stackStore[100];

public:
	Stack();
	void push(int);
	int pop();
};

void Stack::push(int value){
	stackStore[sp++] = value;
}

int Stack::pop(){
	return stackStore[--sp];
}

Stack::Stack(){
	sp = 0;
}

class AddingStack: Stack{
private:
	int sum;
public:
	void push(int);
	AddingStack();
};

void AddingStack:: push(int value){
	sum += value;
	Stack::push(sum);
}

AddingStack::AddingStack(){
	sum = 0;
}

int main(void) {

	Stack stackObj;
	AddingStack addingObj;
	for (int i = 0; i < 100; i++){
		stackObj.push(i*2 + 24);
		AddingObj.push(i*2 + 24);
	}

	return 0;
}
