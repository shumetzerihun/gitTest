#include <iostream>
#include <string>

using namespace std;


class friendClass{

private:
	int age;
public:
	friendClass(int = 0);
	~friendClass();

friend void printAge(friendClass a);

};


void printAge(friendClass x){

	cout<<x.age;
}

int main(){

	friendClass a;
	printAge(a);

	return 0;
}


