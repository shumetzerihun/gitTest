#include <iostream>
#include <string>

using namespace std;


class FriendClass{

private:
	int age;
public:
	FriendClass(int = 0);
	~FriendClass();

friend void printAge(FriendClass a);

};

class FriendClass2{

private:
	int age;
public:
	FriendClass2(int);
	void printAge2(int);
};

FriendClass2::FreindClass2(int a):age(a){
}

void FriendClass2::printAge2(void){
		cout<<age<<endl;
	}

void printAge(FriendClass x){

	cout<<x.age;
}

int main(){

	FriendClass2 aa(33);


	return 0;
}


