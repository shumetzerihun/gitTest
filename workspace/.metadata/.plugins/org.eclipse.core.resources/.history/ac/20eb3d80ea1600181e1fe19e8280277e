#include <string>
#include <iostream>
#include <locale>
using namespace std;

char stack[2049] = {0};
int sp = 0;

void push(int value){
	stack[sp++] = value;
	cout<<stack[--sp];
}

char pop(){
	return stack[--sp];
}

int main(void) {

	string expression = {"+13"}; //cout <<expression.size() - 1<<endl;
	char opNew = 0;

	for (int i = expression.size() - 1; i >= 0; i--){
		if (isdigit(expression[i])){
			//cout<<expression[i];
			push (expression[i]);
		}

		else{
			char op1 = pop() - '0'; cout<<op1<<" ";
			char op2 = pop() - '0'; //cout<<op2<<" ";

			switch (expression[i]){
					case '+':
						opNew = op1 + op2; cout<<opNew<<endl;
						push(opNew);

						break;
					case '-':
						opNew = op1 - op2;
						push(opNew);
						break;
					case '*':
						opNew = op1 * op2;
						push(opNew);
						break;
					}
		}
	}

	//cout<<stack[0];



	return 0;

}

